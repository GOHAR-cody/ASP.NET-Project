    </style>
    
<form action="/Home/Index" method="post">
    <div class="mb-3">
        <div class="label-container">
            <label for="taskNameInput" class=" h2 fw-bold mb-0" style="padding-bottom:0.5em">Tasks</label>
            <div style="padding-left:.5em">
                <input type="text" class="form-control narrow-input" asp-for="TaskName" id="taskNameInput"><span><button type="submit" class="btn btn-primary">Add Task</button></span></div>
           
        </div>
      
    </div>
</form>
<div class="container">
    <ul id="myUL">
        @if (ViewBag.users != null && ViewBag.users.Count >= 1)
        {
            @foreach (var user in ViewBag.users)
            {
                <li>
                   
                    <span>@user.TaskName</span>
                    <form method="post" asp-controller="Home" asp-action="Delete" asp-route-id="@user.id" style="display: inline;">
                        <button type="submit" class="deleteBtn">Delete</button>
                    </form>
                </li>
            }
        }
    </ul>
</div>





      


